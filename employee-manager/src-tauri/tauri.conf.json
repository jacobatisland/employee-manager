{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Employee Manager",
  "version": "1.0.1",
  "identifier": "com.employeemanager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Employee Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": null,
      "signingIdentity": "916E0DAF93F1EE6360526ADF595E37D9D324770D",
      "providerShortName": null,
      "entitlements": null
    },
    "windows": {
      "wix": {
        "language": ["en-US"],
        "skipWebviewInstall": false,
        "enableElevatedUpdateTask": false,
        "enableDesktopShortcut": true,
        "enableMenuShortcut": true,
        "enableStartMenuShortcut": true,
        "enableUninstallerShortcut": true,
        "runAfterFinish": false,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "createStartupShortcut": false,
        "shortcutName": "Employee Management System",
        "upgradeCode": "A1B2C3D4-E5F6-7890-ABCD-EF1234567890"
      }
    },
    "publisher": "Employee Manager Team",
    "copyright": "Copyright Â© 2024 Employee Manager Team. All rights reserved.",
    "category": "Business",
    "shortDescription": "Employee Management System",
    "longDescription": "A comprehensive employee management system that provides secure access to employee data through a modern desktop interface."
  }
}