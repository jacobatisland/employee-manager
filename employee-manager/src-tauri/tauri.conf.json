{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Employee Manager",
  "version": "1.0.0",
  "identifier": "com.demo.employee-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Employee Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": null,
      "wix": {
        "language": ["en-US"],
        "template": null,
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": [],
        "skipWebviewInstall": false,
        "license": null,
        "enableElevatedUpdateTask": false,
        "bannerPath": null,
        "dialogImagePath": null,
        "fipsCompliant": false
      }
    },
    "publisher": "Demo Company",
    "copyright": "Copyright Â© 2024 Demo Company. All rights reserved.",
    "category": "BusinessApp",
    "shortDescription": "Employee Management System for VPN Demo",
    "longDescription": "A comprehensive employee management system designed for demonstration of VPN and Zero Trust Network Access (ZTNA) capabilities. This application provides secure access to employee data through a modern desktop interface."
  }
}